<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
          <%= @user.name %>
      </h1>
      <p> <%= gravatar_for @user %></p>
    </section>
    <section>
      <h2>
        Teams
      </h2>
      <ul> 
        <% @user.teams.each do |x| %>
        <li><%= link_to "#{x.name}" , x %> </li>
      </ul>
        <% end %>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>