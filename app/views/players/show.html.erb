<% provide(:title, @player.full_name) %>

  <aside class="span4">
    <section>
      <h1>
          <%= @player.full_name %>
      </h1>
    </section>
    <section>
      <dl class="dl-horizontal">
        <dt>Age</dt>
          <dd><%= @player.age %></dd>
        <dt>Country of Birth</dt>
          <dd><%= @player.country.name %></dd>
        <dt>Specialism</dt>
          <dd><%= @player.specialism.specialism %></dd>
        <dt>Hand</dt>
          <dd><%= @player.hand %></dd>
        <dt>Biography</dt>
            <% if @player.biography? %>
          <dd><%= @player.biography %></dd>
            <% else %>
          <dd>Nothing yet...</dd>
            <% end %>
        <dt># of teams playing for:</dt>
          <dd><%= "#{@player.teams.count}" %></dd>
      </dl>
    </section>
  </aside>
  <div class="span8">
  </div>