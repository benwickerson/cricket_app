<h1>Edit <%= @team.name %></h1>

<div class="row">
  <div class="span4">
    <table class="table table-striped table-bordered table-condensed" id="roster_table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Specialism</th>
        </tr>
      </thead>
      <tbody>
        <% @players.each do |player| %>
        <tr>
          <td><%= player.full_name %></td>
          <td><%= player.age %></td>
          <td><%= player.specialism.specialism %> </td>
        </tr>
        <% end %>
        </tbody>
    </table>
  </div>




  <div class="span8">
    <%= render 'team_roster', members: @members %>
  </div>


</div>
