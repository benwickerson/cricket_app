<% provide(:title, 'New Team') %>
<h1>New Team</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@team) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :user_id %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :ground_id %>
      <%= f.collection_select :ground_id, Ground.all, :id, :name, include_blank: true %>

      <%= f.label :country_id %>
      <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: true %>
      
      <%= f.fields_for :team_memberships do |builder| %>
      <%= builder.label :player_id, "Player" %>
      <%= builder.collection_select :player_id, Player.all, :id, :full_name %>
      <% end %>
      <br>
      <%= f.submit "Create Team", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
