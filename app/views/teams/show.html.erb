<% provide(:title, @team.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
          <%= @team.name %>
      </h1>
      <dl class="dl-horizontal">
        <dt>Owner</dt>
          <dd><%= link_to "#{@team.user.name}", @team.user %></dd>
        <dt>Ground</dt>
          <dd><%=link_to "#{@team.ground.name}", [@team, @team.ground] %></dd>
        <dt>Country</dt>
          <dd><%= @team.country.name %></dd>
      </dl>
    </section>  
  </aside>
  <div class="span8 team-list">
    <h3>Team Roster</h3>
    <% if current_user?(@team.user)%>
    <%=link_to "Edit Roster", edit_user_team_path(@team.id, @team.user_id), class: "btn" %>
    <% end %>
    
    <%= render 'team_roster', members: @members %>
  </div>
</div>

