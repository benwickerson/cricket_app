<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Age</th>
      <th>Specialism</th>
      <th>Captain</th>
      <th>Wicket Keeper</th>
    </tr>
  </thead>
  <tbody>
    <% members.each do |member| %>
    <tr>
      <td><%= member.position %></td>
      <td><%=link_to "#{member.player.full_name}", [member.team, member.player] %></td>
      <td><%= member.player.age %></td>
      <td><%= member.player.specialism.specialism %> </td>
      <td><%= member[:captain] == true ? "X" : "" %></td>
      <td><%= member[:wicket_keeper] == true ? "X" : "" %></td>
    </tr>
    <% end %>
    </tbody>
</table>